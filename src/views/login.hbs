<div class="container my-5">
  <div class="jumbotron">
    <h1>Ingreso al sistema</h1>
    <br />
    <form
      class="form"
      action="/login"
      method="post"
      role="form"
      autocomplete="off"
    >
      <div class="form-group">
        <input
          id="email"
          name="email"
          placeholder="Dirección de correo"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="password"
          name="password"
          placeholder="Contraseña"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Login" />
      </div>
    </form>

    <div class="text-left">
      <a href="/register">
        <button class="btn btn-success my-3">Registrarse</button>
      </a>
    </div>

  </div>
</div>